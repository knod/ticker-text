{
    "author": "knod & synapse25",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
		"name": "Ticker Text",
        "default_icon": "images/ticker-text-128.png",
        "default_title": "Ticker Text"
    },
    "content_scripts": [
        {
            "css": [
                "css/parent-page.css"
            ],
            "js": [
                "bundle.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*",
                "<all_urls>"
            ]
        }
    ],
    "description": "Ticker Text - Accessible/Speed Reading via RSVP",
    "homepage_url": "http://github.com/knod/ticker-text",
    "icons": {
        "128": "images/ticker-text-128.png",
        "48": "images/ticker-text-48.png",
        "16": "images/ticker-text-16.png"
    },
    "manifest_version": 2,
    "name": "Ticker Text",
    "offline_enabled": true,
    "permissions": [
        "contextMenus",
        "activeTab",
		"storage",
        "webNavigation",
        "<all_urls>"
    ],
    "short_name": "Ticker Text",
    "version": "0.1.1",
	"web_accessible_resources": [
        "css/iframe.css",
		"fonts/DroidSans-webfont.eot",
		"fonts/DroidSans-webfont.svg",
		"fonts/DroidSans-webfont.ttf",
		"fonts/DroidSans-webfont.woff",
        "images/*"
	]
}
